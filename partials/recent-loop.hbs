{{#get "posts" filter="tag:null,tag:-work" limit="3"}}
  {{#foreach posts as |current_post|}}
    {{#current_post}}
      {{#featured}}
        <article class="recentcard {{post_class}} br0 bg-color fl mv2 ma2-ns w-third-ns w-100">
         <div class="cover bg-left bg-center-l " style="background-image: url({{image}})">
           <div style="background-color: rgba(0,0,0,0.65)">
            	<div class="pa2 ph3-ns pb3-ns">
                <div class="cf w-100 mb2">
                    <h3 class="f3 f4-ns fw6 dim">
                      <a class="link fc-alternate dim" href="{{url}}" alt="{{title}}">{{{title}}}</a>
                    </h3>
                </div>
                <time class="f6 fw2 lh-copy measure mv2 tl link fc-alternate" datetime="{{date format="M-d-YYYY"}}">
                  <span>{{date format="MMM DD, YYYY"}}</span>
                </time>
                <p class="f6 fw2 f5-ns fc-alternate lh-copy measure mt2">
                  {{excerpt words="45"}}
                </p>
              </div>
            </div>
          </div>
        </article>
      {{else}}
        <article class="recentcard {{post_class}} br0 card-contrast-color fl mv2 ma2-ns w-third-ns w-100">
            {{#if image}}
              <a class="link fc-primary dim" href="{{url}}" alt="{{title}}">
                <img class="db w-100 br2 br--top h-auto" src="{{image}}" alt="{{title}}">
              </a>
            {{/if}}
          	<div class="pa2 ph3-ns pb3-ns">
              <div class="dt w-100 mt1">
                <div class="dtc">
                  <h3 class="f3 f4-ns fw6 dim">
                    <a class="link fc-primary dim" href="{{url}}" alt="{{title}}">{{{title}}}</a>
                  </h3>
                </div>
              </div>
              <time class="f6 fw2 lh-copy measure mv2 tl link fc-primary" datetime="{{date format="M-d-YYYY"}}">
                <span>{{date format="MMM DD, YYYY"}}</span>
              </time>
              <p class="f6 f5-ns fw3 lh-copy measure mt2">
                {{excerpt words="30"}}
              </p>
            </div>
        </article>
      {{/featured}}
    {{/current_post}}
  {{/foreach}}
{{/get}}
